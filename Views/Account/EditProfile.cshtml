@{
    ViewData["Title"] = "Edit Profile";
}

@model BachelorsHome.Models.UserDatabase
@if (ViewBag.Notification == "Password")
{
    <div class="col-md-12">
        <div class="alert alert-danger alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <label>Password Should be at least 6 Characters</label>
        </div>
    </div>
    ViewBag.Notification = "";
}
else if (ViewBag.Notification == "Duplicate")
{
    <div class="col-md-12">
        <div class="alert alert-danger alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <label>This Email Already Exist</label>
        </div>
    </div>
    ViewBag.Notification = "";
}
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<div class="background-update-profile">
    <div class="container">
        <div class="view-account">
            <section class="module">
                <div class="module-inner">
                    <div class="side-bar">
                        <div class="user-info">
                            <img class="img-profile img-circle img-responsive center-block" src=@Html.DisplayFor(model => model.Picture)>
                            <ul class="meta list list-unstyled">
                                <li class="name">
                                    @Html.DisplayFor(model => model.Name)
                                </li>
                                <li class="name">
                                    @Html.DisplayFor(model => model.Profession)
                                </li>
                                <li class="name">@Html.DisplayFor(model => model.Gender)</li>
                                <li class="name">@Html.DisplayFor(model => model.BloodGroup)</li>
                                <li class="activity">Date Of Birth: @Html.DisplayFor(model => model.DateofBirth)</li>
                                <li class="activity">Registration Date: @Html.DisplayFor(model => model.RegistrationDate)</li>
                            </ul>
                        </div>

                    </div>
                    <div class="content-panel">
                        <h2 class="title">Profile<span class="pro-label label label-warning">PRO</span></h2>
                        <form class="form-horizontal" asp-action="EditProfile" enctype="multipart/form-data" asp-antiforgery="true" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <fieldset class="fieldset">
                                <h3 class="fieldset-title">Personal Info</h3>
                                <div class="form-group avatar">
                                    <figure class="figure col-md-2 col-sm-3 col-xs-12">
                                        <img class="img-rounded img-responsive" src=@Html.DisplayFor(model => model.Picture)>
                                    </figure>

                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 col-sm-3 col-xs-12 control-label">Update Image:</label>
                                    <div class="col-md-10 col-sm-9 col-xs-12">
                                        <input type="file" class="form-control"name="myFile" accept="image/*" id="myFile">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 col-sm-3 col-xs-12 control-label">Name:</label>
                                    <div class="col-md-10 col-sm-9 col-xs-12">
                                        <input asp-for="Name" type="text" class="form-control" required="">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-2 col-sm-3 col-xs-12 control-label">Password:</label>
                                    <div class="col-md-10 col-sm-9 col-xs-12">
                                        <input asp-for="Password" class="form-control" required="">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 col-sm-3 col-xs-12 control-label">Profession:</label>
                                    <div class="col-md-10 col-sm-9 col-xs-12">
                                        <input asp-for="Profession" type="text" class="form-control" required="">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4 col-sm-6 col-xs-12 control-label">About You:</label>
                                    <div class="col-md-10 col-sm-9 col-xs-12">
                                        <input asp-for="AboutMe" type="text" class="form-control textarea7" required="">
                                    </div>
                                </div>
                            </fieldset>
                            <br />
                            <fieldset class="fieldset">
                                <h3 class="fieldset-title">Contact Info</h3>
                                <div class="form-group">
                                    <label class="col-md-4  col-sm-6 col-xs-12 control-label">Email:</label>
                                    <div class="col-md-10 col-sm-9 col-xs-12">
                                        <input asp-for="Email" type="email" class="form-control" required="">

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4  col-sm-6 col-xs-12 control-label">Contact No:</label>
                                    <div class="col-md-10 col-sm-9 col-xs-12">
                                        <input type="text" class="form-control" asp-for="Phone" required="">

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4  col-sm-6 col-xs-12 control-label">Current Address:</label>
                                    <div class="col-md-10 col-sm-9 col-xs-12">
                                        <input type="text" class="form-control" asp-for="CurrentAddress" required="">

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4  col-sm-6 col-xs-12 control-label">Permanent Address:</label>
                                    <div class="col-md-10 col-sm-9 col-xs-12">
                                        <input type="text" class="form-control" asp-for="PermanentAddress" required="">

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2  col-sm-3 col-xs-12 control-label">Facebook</label>
                                    <div class="col-md-10 col-sm-9 col-xs-12">
                                        <input type="url" asp-for="Facebook" class="form-control" required="">
                                        <p class="help-block">eg. https://www.facebook.com/yourname</p>
                                    </div>
                                </div>
                            </fieldset>
                            <br />
                            <fieldset class="fieldset">
                                <h3 class="fieldset-title">Personal Interest</h3>

                                <div class="form-group">
                                    <label class="col-md-2  col-sm-3 col-xs-12 control-label">Hobby:</label>
                                    <div class="col-md-10 col-sm-9 col-xs-12">
                                        <input type="text" class="form-control" asp-for="Hobby" required="">

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4  col-sm-6 col-xs-12 control-label">Professional Interest:</label>
                                    <div class="col-md-10 col-sm-9 col-xs-12">
                                        <input type="text" class="form-control textarea7" asp-for="ProfessionalInterest" required="">

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4  col-sm-6 col-xs-12 control-label">Religious Views:</label>
                                    <div class="col-md-10 col-sm-9 col-xs-12">
                                        <input type="text" class="form-control" asp-for="ReligiousViews" required="">

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4  col-sm-6 col-xs-12 control-label">Political Interest:</label>
                                    <div class="col-md-10 col-sm-9 col-xs-12">
                                        <input type="text" class="form-control" asp-for="PoliticalInterest" required="">

                                    </div>
                                </div>
                            </fieldset>
                            <hr>
                            <div class="form-group">
                                <div class="col-md-10 col-sm-9 col-xs-12 col-md-push-2 col-sm-push-3 col-xs-push-0">
                                    <input class="btn btn-primary" type="submit" value="Update Profile">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>